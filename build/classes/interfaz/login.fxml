<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfaz.LoginController">
   <children>
      <TextField fx:id="campoNombre" layoutX="225.0" layoutY="159.0" onAction="#LoginNombre" promptText="Nombre" />
      <PasswordField fx:id="campoContraseña" layoutX="226.0" layoutY="206.0" onAction="#LoginContraseña" promptText="Contraseña" />
      <Button fx:id="btnAcceder" defaultButton="true" layoutX="226.0" layoutY="263.0" mnemonicParsing="false" onAction="#AccederLogin" style="-fx-background-color: #5aab0d;" text="Acceder" />
      <Button fx:id="btnLimpiar" cancelButton="true" layoutX="321.0" layoutY="263.0" mnemonicParsing="false" onAction="#LimpiarLogin" style="-fx-background-color: #df3b16;" text="Limpiar" />
      <Button fx:id="btnNuevoUsuario" layoutX="240.0" layoutY="331.0" mnemonicParsing="false" text="Crear nuevo usuario" />  
      <Label layoutX="156.0" layoutY="39.0" text="HotelMaster">
         <font>
            <Font name="Comic Sans MS Bold" size="48.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
